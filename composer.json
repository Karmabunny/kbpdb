{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "karmabunny/pdb",
    "description": "PDO wrapper",
    "type": "library",
    "license": "GPL2",
    "require": {
        "php": "^7",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-pdo": "*",
        "karmabunny/kb": "^2|dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "karmabunny\\pdb\\": "src",
            "kbtests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": { "karmabunny/*": "dist" }
    },
    "scripts": {
        "tests": "phpunit --testdox tests",
        "create-db": "bash scripts/create_db.sh",
        "publish": "bash scripts/publish.sh"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.bunnysites.com/",
            "canonical": true
        }
    ]
}
